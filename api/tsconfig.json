{
	"extends": "@tsconfig/node17",
	"compilerOptions": {
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"outDir": "./dist",
		"rootDir": "src",
		"incremental": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"pretty": true,
		"stripInternal": true,
		"noEmitOnError": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"paths": {
			"@uniesports/*": ["../common/*"]
		}
	},
	"ts-node": {
		"files": true
	}
}
